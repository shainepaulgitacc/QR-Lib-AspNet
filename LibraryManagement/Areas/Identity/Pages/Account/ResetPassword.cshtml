@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="d-flex justify-content-center align-items-center mt-5 pt-5">
    <div class="w-50 p-5 rounded shadow bg-white">
        <h4 class="mb-5 py-2  rounded-3 fw-bolder text-primary text-center bg-primary-subtle">Change Password</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form method="post">
            <input asp-for="Input.Code" type="hidden" />
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-envelope text-primary fs-4 "></i></span>
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger mb-3"></span>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="text-primary fs-4 bi bi-shield-lock"></i></span>
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="text-primary fs-4 bi bi-shield-lock"></i></span>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmpassword" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center align-items-center gap-2">
                <button type="reset" class="btn btn-outline-primary px-5 rounded-pill">Reset</button>
                <button type="submit" class="btn btn-primary px-5 rounded-pill">Submit</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}